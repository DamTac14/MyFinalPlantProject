{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    {% if app.user %}
        <h1>Vous êtes déjà connectés</h1>
    {% else %}
        <h1>Connexion</h1>

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="form-group">
                <label for="username">Email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
            </div>

            <div class="form-group">
                <label for="password">Mot de passe</label>
                <div class="input-container">
                    <input type="password" name="_password" id="passwordLogin" class="form-control" autocomplete="current-password" required>
                    <button type="button" class="toggle-password" id="togglePasswordLogin">
                        <i class="fa fa-eye"></i>
                    </button>
                </div>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Se souvenir de moi</label>
            </div>

            <button class="btn btn-lg btn-primary" type="submit">Se connecter</button>
        </form>
    {% endif %}

    <script src="{{ asset('js/togglePassword.js') }}?v={{ 'now' | date('U') }}"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
{% endblock %}
